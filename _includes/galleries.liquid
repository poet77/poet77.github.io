<div class="col">
  <a href="{% if gallery.redirect %}{{ gallery.redirect }}{% else %}{{ gallery.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if gallery.img %}
        {%
          include figure.liquid
          loading="eager"
          path=gallery.img
          sizes="250px"
          alt="gallery thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ gallery.title }}</h2>
        <p class="card-text">{{ gallery.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if gallery.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ gallery.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if gallery.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ gallery.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
